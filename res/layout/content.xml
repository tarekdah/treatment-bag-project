<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:background="@color/colorPrimaryDark"
        android:layout_margin="12dp"
        android:id="@+id/kidupdtx"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Update Kid ..."
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/ckidname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ckidid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ckiddbth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="Date Of Birth"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ckidinidig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initial Diagnosis"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/ckidscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textSize="18dp"
        android:textStyle="bold"/>


    <Button
        android:background="@color/colorPrimaryDark"
        android:layout_margin="10dp"
        android:id="@+id/ckidupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

</LinearLayout>